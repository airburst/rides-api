{
  "name": "rides-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc",
    "start": "bun dist/index.js",
    "test": "bun test",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "check": "prettier --write . && eslint --fix",
    "check-types": "tsc --noEmit",
    "deploy": "ssh -i ~/.ssh/oracle-rides-key ubuntu@143.47.251.53 'cd ~/rides-api && git pull && bun install --production && bun run build && pm2 reload rides-api'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pump": "bun src/db/pump.ts",
    "db:seed": "DB_SEEDING=true bun src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "startdb": "./bin/start-database",
    "startredis": "./bin/start-redis"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "postgres": "^3.4.8",
    "redis": "^5.10.0",
    "rrule": "^2.8.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.2",
    "bun-types": "^1.3.9",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
